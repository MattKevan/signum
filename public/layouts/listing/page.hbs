{{! public/layouts/listing/page.hbs }}
<article class="prose dark:prose-invert max-w-none mx-auto">
    <header>
        {{!-- CORRECT: Access data via the contentFile object --}}
        <h1>{{contentFile.frontmatter.title}}</h1>
        <p class="text-gray-500 dark:text-gray-400">{{formatDate contentFile.frontmatter.date}}</p>
    </header>
    
    <hr class="my-6">
    
